generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String   @id @default(cuid())
  type      String
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reservation {
  id               String   @id @default(cuid())
  roomType         String
  checkIn          DateTime
  checkOut         DateTime
  numGuests        Int
  includeBreakfast Boolean   @default(false)
  totalPriceCents  Int
  pricingBreakdown Json
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  // simple idempotency token to avoid duplicates on POST
  idempotencyKey   String?   @unique
}
